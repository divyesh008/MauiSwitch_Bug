<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Switch_Bug.HomePage"
             Title="Home Page">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior TextOverride="Back" IconOverride="back.png"/>
    </Shell.BackButtonBehavior>
    <VerticalStackLayout Spacing="10">
        <Label 
            Text="{Binding WelcomeText}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Clear" Command="{Binding ClearCommand}" HorizontalOptions="Center"/>
        <Button Text="Show Books" Command="{Binding ShowBookPageCommand}" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>
