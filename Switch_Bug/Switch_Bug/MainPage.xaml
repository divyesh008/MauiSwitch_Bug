<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Switch_Bug.MainPage"
             Title="Main Page">
   
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!--This not works in both Android & iOS-->
            <Switch x:Name="toggle1" IsToggled="True" HorizontalOptions="Center">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="On">
                            <VisualState.Setters>
                                <Setter Property="ThumbColor"
                                        Value="Green" />
                                <Setter Property="OnColor"
                                        Value="Navy" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Off">
                            <VisualState.Setters>
                                <Setter Property="ThumbColor"
                                        Value="Red" />
                                <Setter Property="OnColor"
                                        Value="Gray" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Switch>

            <Switch x:Name="toggle2"
                    ThumbColor="#DFD8F7"
                    HorizontalOptions="Center"
                    Toggled="toggle2_Toggled" />

            <Switch x:Name="toggle3"
                    ThumbColor="#DFD8F7"
                    HorizontalOptions="Center" >
                <Switch.Behaviors>
                    <toolkit:EventToCommandBehavior
                        EventName="Toggled"
                        Command="{Binding ToggleCommand}"/>
                </Switch.Behaviors>
            </Switch>

            <Button Text="Click Me" Command="{Binding ClickCommand}"/>
        </VerticalStackLayout>

</ContentPage>

